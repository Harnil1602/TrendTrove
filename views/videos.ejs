<body>
  <div class="header">
    <h1>Trending Videos</h1>
    <p>Watch the hottest videos on YouTube right now!</p>
  </div>

  <div class="videos">
    <% for(let i = 0; i < videos.length; i++) { %>

      <div class="card">
        <img src="<%= videos[i].thumbnailUrl %>" alt="<%= videos[i].title %>">
        <h2><%= videos[i].title %></h2>
        <p><%= videos[i].description.substring(0, 100) %>...</p>
        <a href="<%= videos[i].embedUrl %>">Watch Now</a>
      </div>
    <% } %>
  </div>
</body>
